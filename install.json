{
	"$schema": "http://json.schemastore.org/install",
	"resources": {
		"body": [{
				"type": "style",
				"src": "./build/styles.css"
			},
			{
				"type": "script",
				"src": "./build/index.js"
			}
		]
	},
	"workers": [{
		"src": "./build/worker.js"
	}],
	"hooks": [{
		"endpoint": "http://dev.chasegranberry.net/api/cloudflare/event",
		"events": ["option-change:account", "oauth-login"],
		"block": true,
		"authenticate": ["account"],
		"failure": {
			"action": "notify",
			"message": "There was an error communicating with Logflare."
		}
	}],
	"preview": {
		"hide": true
	},
	"options": {
		"properties": {
			"account": {
				"title": "Logflare Account",
				"type": "object",
				"format": "account",
				"services": ["logflare-dev"],
				"required": true,
        "order": 1
			},
			"accountSources": {
				"title": "Source",
				"type": "string",
				"description": "Which source should we send logs to?",
				"order": 2,
        "required": true,
				"enum": ["source1"],
				"enumNames": {
          "source1": "Sign in to select a source"
        }
			}
		}
	}
}
